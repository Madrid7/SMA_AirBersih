{% extends "SMAAdminBundle:AdminPage:AdminTemplate.html.twig" %}

{% block content %}
<legend><center>Edit Profil</center></legend>
<form class="form-horizontal" role="form" method="POST" action="{{path('edit_profil')}}">
        <fieldset>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nama</label>
            <div class="col-sm-8">
              <input type="text" placeholder="name" class="form-control" name="nama" required="required" value="{{app.user.nama}}">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Email</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Email" class="form-control" name="email" required="required" value="{{app.user.email}}">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Password</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Password" class="form-control" name="password" required="required">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
              <div class="pull-right">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>

        </fieldset>
      </form>
{% endblock %}
{% extends "SMAAdminBundle:AdminPage:AdminTemplate.html.twig" %}

{% block content %}
<legend><center>Data Guru</center></legend>
<form class="form-horizontal" role="form" method="POST" action="{{path('data_guru')}}">
        <fieldset>

          <!-- Form Name -->
          <legend>Registrasi Guru</legend>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Username</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Username" class="form-control" name="username" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nama</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Nama" class="form-control" name="nama" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">No. Induk</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Nomor Induk" class="form-control" name="nip" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Email</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Email" class="form-control" name="email" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Password</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Password" class="form-control" name="password" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Bidang</label>
            <div class="col-sm-8">
              <select name="bidang">
                {% for i in mapel %}
                <option value="{{i.matapelajaran}}" class="form-control">{{i.matapelajaran}}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
              <div class="pull-right">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>

        </fieldset>
      </form>
<br>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>No</th>
            <th>No. Induk</th>
            <th>Nama</th>
            <th>Email</th>
            <th>Bidang</th>
            <th>Edit</th>
            <th>Delete</th>                                         
        </tr>
    </thead>   
    <tbody>
        {% for j in guru %}
        <tr>
            <td>{{loop.index}}</td>
            <td>{{j.noinduk}}</td>
            <td>{{j.nama}}</td>
            <td>{{j.email}}</td>
            <td>{{j.bidang}}</td>
            <td><p><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" data-placement="top" rel="tooltip"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
    		<td><p><a href="{{path('delete_guru', {'id' : j.Id})}}"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" data-placement="top" rel="tooltip"><span class="glyphicon glyphicon-trash"></span></button></a></p></td>
    	</tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
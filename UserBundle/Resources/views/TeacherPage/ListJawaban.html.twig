{% extends "SMAUserBundle:TeacherPage:TeacherTemplate.html.twig" %}

{% block content %}
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>No</th>
            <th>Tanggal</th>
            <th>Judul</th>
            <th>Mata Pelajaran</th>
            <th>Nama</th>
            <th>Check</th>
            <th>Delete</th>                                         
        </tr>
    </thead>   
    <tbody>
        {% for i in jawaban %}
        <tr>
            <td>{{loop.index}}</td>
            <td>{{i.tanggal|date('d M Y')}}</td>
            <td>{{i.judul}}</td>
            <td>{{i.matapelajaran}}</td>
            <td>{{i.namaSiswa}}</td>
            <td><p><a href="{{path('open_jawaban', {'id' : i.Id})}}"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
            <td><p><a href="{{path('delete_jawaban', {'id' : i.Id})}}"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button></p></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
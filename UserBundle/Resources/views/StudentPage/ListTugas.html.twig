{% extends "SMAUserBundle:StudentPage:StudentTemplate.html.twig" %}

{% block content %}
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>No</th>
            <th>Tanggal</th>
            <th>Mata Pelajaran</th>
            <th>Judul</th>
            <th>Guru</th>
            <th>Mulai</th>                                         
        </tr>
    </thead>   
    <tbody>
        {% for i in tugas %}
        <tr>
            <td>{{loop.index}}</td>
            <td>{{i.tanggal|date('d M Y')}}</td>
            <td>{{i.mataPel}}</td>
            <td>{{i.judul}}</td>
            <td>{{i.namaGuru}}</td>
            <td><p><a href="{{path('open_tugas', {'id' : i.Id})}}"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" data-placement="top" rel="tooltip"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
        </tr>
       {% endfor %} 
    </tbody>
</table>
{% endblock %}
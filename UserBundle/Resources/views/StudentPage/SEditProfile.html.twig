{% extends "SMAUserBundle:StudentPage:StudentTemplate.html.twig" %}

{% block content %}
<legend><center>Edit Profile</center></legend>
<form class="form-horizontal" role="form" method="POST" action="{{path('sedit_profile')}}">
        <fieldset>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nama</label>
            <div class="col-sm-8">
              <input type="text" placeholder="name" class="form-control" name="nama" value="{{app.user.nama}}">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">No.Induk</label>
            <div class="col-sm-8">
              <input type="text" placeholder="name" class="form-control" name="noinduk" value="{{app.user.noInduk}}">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Email</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Email" class="form-control" name="email" value="{{app.user.email}}">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Password</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Password" class="form-control" name="password">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">No Telp</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Nomor Telepon" class="form-control" name="hp" value="{{app.user.noHp}}">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Jurusan</label>
            <div class="col-sm-4">
              <select name="jurusan">
                {% for i in jurusan %}
                <option value="{{i.jurusan}}" class="form-control">{{i.jurusan}}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Kelas</label>
            <div class="col-sm-4">
              <select name="kelas">
                {% for i in kelas %}
                <option value="{{i.kelas}}" class="form-control">Kelas {{i.kelas}}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Alamat</label>
            <div class="col-sm-8">
              <input type="text" placeholder="Alamat" class="form-control" name="alamat" value="{{app.user.Alamat}}">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
              <div class="pull-right">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>

        </fieldset>
      </form>
{% endblock %}
</style>            
{% endblock %}

{% block content %}
<div class="col-md-8 col-md-offset-2">
	<div class="bs-example" id="pad">
        <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>   
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="active item">
                    <img src="{{asset('bundles/smauser/slider/img1.png')}}" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>Lorem ipsum dolor sit amet, consectetur adipisicing elit</h3>
                        <p></p>
                    </div>
                </div>
                <div class="item">
                    <img src="{{asset('bundles/smauser/slider/img2.png')}}" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>sed do eiusmod
                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,</h3>
                        <p></p>
                    </div>
                </div>
                <div class="item">
                    <img src="{{asset('bundles/smauser/slider/img3.png')}}" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                        consequat.</h3>
                        <p></p>
                    </div>
                </div>
                <div class="item">
                    <img src="{{asset('bundles/smauser/slider/img4.png')}}" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>Duis aute irure dolor in reprehenderit in voluptate velit esse
                        cillum dolore eu fugiat nulla pariatur.</h3>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" id="fb">
	<div class="row">
	    <div class="col-md-10 col-md-offset-1" id="berita">
	        <legend><center>Berita</center></legend>
	        {% for item in berita %}
	        <div class="col-md-4 col-md-offset-0">
	            <div class="judul-berita"><strong>{{ item.judul }}</strong></div>
	            <div class="tanggal-berita"><b><font color="red">{{ item.tanggal|date('d-M-Y') }}</font></b></div>
	            <div class="deskripsi-berita">
	            {% set isi = item.konten|split(" ") %}
	            {% for i in 0..40 %}
	                {{ isi[i]|raw }}
	            {% endfor %} 
	            </div><br>
	            <div style="text-align: right"><a href="{{path('berita_sekolah', {'id' : item.Id})}}">Selengkapnya &raquo;</a></div>
	        </div>
	        {%endfor%}
	    </div>
	</div>
</div>
{% endblock %}